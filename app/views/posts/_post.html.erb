<div class="post", id="post_<%= post.id %>" >
  <% if current_user == post.user %>
    <nav>
      <ul class="nav navbar-nav navbar-right post_edit_button">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle test" data-toggle="dropdown">
            <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to "Edit post", edit_post_path(post) %></li>
            <li><%= link_to "Delete post", post, method: :delete, data: { confirm: "are your sure?" } %></li>
          </ul
        </li>
      </ul>
    </nav>
  <% end %>

  <div class="post-info">
    <span class="username"><%= link_to post.user.username, post.user, class: "username" %></span>
    <% if post.created_at != post.updated_at %>
      <span class="updated_at">Updated <%= time_ago_in_words(post.updated_at) %> ago</span>
    <% else %>
      <span class="created_at"><%= time_ago_in_words(post.created_at) %> ago</span>
    <% end %>
  </div>
    <span class="content"><%= post.content %></span>
    <% unless @page == "individual_post" %>
      <div class="post_link"><%= link_to "Full post", post %></div>
    <% end %>
</div>


<div class="comment_section">
  <div class="comment_form">
    <%= render "comments/comment_form", post_id: post.id  %>
  </div>

  <div id="comments_of_post_<%= post.id %>">
    <%= render "comments/all_comments", comments: post.comments %>
  </div>
</div>
