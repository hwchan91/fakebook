<div class="row">
  <div class="col-sm-2"></div>
  <div class="col-sm-8 posts">
    <div class="logged-in-user-info"><%= current_user.username %></div>
    <div class="post-form" >
      <%= form_for(@post) do |f| %>
        <div class="field">
          <%= f.text_area :content, cols: "1000", rows: "6", placeholder: "Compose new post..." %>
        </div>
        <div class="new_post_submit_button">
          <%= f.submit "Post", class: "btn btn-primary", class: "btn btn-primary post_button" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-sm-2"></div>
</div>
