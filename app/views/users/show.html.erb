<div class="profile_name_avatar">
  <div class="avatar">
    <%= render 'shared/avatar', user: current_user %>
  </div>
  <h1><%= @user.username %></h1>
</div>
<br>

<% if current_user == @user %>
  <%= link_to "Change avatar", add_avatar_path if (@user.avatar.present? or @user.fb_avatar )%>
  <%= link_to "Add avatar", add_avatar_path if !@user.avatar.present? and !@user.fb_avatar %>
<% end %>

<div class="profile_page_friend_button" >
<%= render 'friend_button_together', user: @user %>
</div>
<%= render 'logged_in_profile_menu'%>


<div class="row">
  <div class="col-lg-2"></div>
  <div class="col-lg-8 posts">
    <%= render partial: "posts/post", collection: @posts, as: :post %>
  </div>

</div>
