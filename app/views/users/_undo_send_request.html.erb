<% if @page != "profile" %>
    <div><%= link_to user.username, user, class:"username" %></div>
<% end %>

<p>Request sent</p>

<%= form_for(current_user.active_requests.find_by(receiver_id: user.id),
             html: { method: :delete },
             remote: true) do |f| %>
  <div><%= hidden_field_tag :page, @page %></div>
  <%= f.submit "Undo", class: "btn btn-secondary" %>
<% end %>
