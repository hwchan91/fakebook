<% user = friendship.friend %>
<li>
  <%= link_to user.username, user %>
  <%= form_for(current_user.friendships.find_by(friend_id: user.id),
               html: { method: :delete },
               remote: true) do |f| %>
    <%= f.submit "Unfriend", class: "btn btn-secondary" %>
  <% end %>
</li>
